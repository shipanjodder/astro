---
import { Icon } from "astro-icon/components";

/** 
	Uses https://www.astroicon.dev/getting-started/
	Find icons via guide: https://www.astroicon.dev/guides/customization/#open-source-icon-sets
	Only installed pack is: @iconify-json/mdi
*/
const socialLinks: {
	friendlyName: string;
	isWebmention?: boolean;
	link: string;
	name: string;
}[] = [
{
		friendlyName: "WhatsApp",
		link: "https://api.whatsapp.com/send?phone=13478295675",
		name: "mdi:whatsapp",
	},
	{
		friendlyName: "Skype",
		link: "https://join.skype.com/invite/sMyt0qE0lx34",
		name: "mdi:skype",
	},
	{
		friendlyName: "Linkedin",
		link: "https://www.linkedin.com/in/shipanjodder/",
		name: "mdi:linkedin",
	},
	{
		friendlyName: "Instagram",
		link: "https://www.instagram.com/theshiponsingh/",
		name: "mdi:instagram",
	},
	{
		friendlyName: "Github",
		link: "https://github.com/shipanjodder",
		name: "mdi:github",
	},
	{
		friendlyName: "Docker",
		link: "https://hub.docker.com/u/shipanjodder",
		name: "mdi:docker",
	},
];
---

<div class="flex flex-wrap items-end gap-x-2">
	<p>Find me on</p>
	<ul class="flex flex-1 items-center gap-x-2 sm:flex-initial">
		{
			socialLinks.map(({ friendlyName, isWebmention, link, name }) => (
				<li class="flex">
					<a
						class="inline-block sm:hover:text-link"
						href={link}
						rel={`noreferrer ${isWebmention ? "me authn" : ""}`}
						target="_blank"
					>
						<Icon aria-hidden="true" class="h-8 w-8" focusable="false" name={name} />
						<span class="sr-only">{friendlyName}</span>
					</a>
				</li>
			))
		}
	</ul>
</div>
